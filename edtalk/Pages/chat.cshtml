@page
@model edtalk.Pages.chatModel
@{
    ViewData["Title"] = "Chat";
}
<header class="page-header">
    <div class="container">
      <span id="chatUserTitle"></span>
    </div>
  </header>
  <div class="container">
    <div class="chat-log" id="output">
    </div>
    <div clas="feedback"></div>
  </div>
  <div class="chat-form fixed-bottom" action="#">
    <div class="container ">
      <form class="form-horizontal" action="#">
        <div class="row">
          <div class="col-sm-10 col-xs-8">
            <input autocomplete="off" type="text" class="form-control-chat sendTxt form-control" id="message" placeholder="Message" />
          </div>
          <div class="col-sm-2 col-xs-4">
            <button type="button" id="send" class="animated pulse btn chatButton btn-block">Send</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="modal animated fadeIn" id="usernameModal" tabindex="-1" role="dialog" aria-labelledby="usernameModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <form onsubmit="return false" autocomplete="off">
            <div class="form-group">
              <input type="text" class="form-control" id="username" aria-describedby="userHelp" placeholder="Enter Username">
            </div>
            <button id="usernameButton" onclick="" type="button" class="btn chatButton btn-block">Join</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Include all compiled plugins (below), or include individual files as needed -->
  <script src="js/bootstrap.min.js"></script>
</body>
<script src="/chat.js"></script>
<script type="text/javascript">
  $(window).on('load', function() {
    $('#usernameModal').modal({
      backdrop: 'static',
      keyboard: false
    })
    $('#usernameModal').modal('show');
  });
</script>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>